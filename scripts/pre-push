#!/bin/bash
# Copyright (c) Rego-Rs Authors.
# Licensed under the Apache 2.0 license.

set -eo pipefail

if [ -f Cargo.toml ]; then
   # Run precommit checks
   dir=$(dirname "${BASH_SOURCE[0]}")
   "$dir/pre-commit"

   # Ensure that all tests pass
   # Also generate coverage information.
   scripts/coverage
fi
